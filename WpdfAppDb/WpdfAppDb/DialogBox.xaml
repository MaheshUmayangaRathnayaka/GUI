<Window x:Class="WpdfAppDb.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Details" Height="250" Width="350" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Vehicle Type:"/>
        <TextBox x:Name="txtName" Grid.Row="0" Margin="0,20,0,0"/>

        <TextBlock Text="Model:" Grid.Row="1"/>
        <TextBox x:Name="txtField2" Grid.Row="1" Margin="0,20,0,0"/>

        <TextBlock Text="Rent Per Day(Rs):" Grid.Row="2"/>
        <TextBox x:Name="txtQuantity" Grid.Row="2" Margin="0,20,0,0"/>

        <TextBlock Text="Location:" Grid.Row="3"/>
        <TextBox x:Name="txtLocation" Grid.Row="3" Margin="0,20,0,0"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="OK" Width="70" Margin="5" Click="OK_Click"/>
            <Button Content="Cancel" Width="70" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
